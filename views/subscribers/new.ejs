<div class="form-data">
    <form action="/subscribers/create" method="POST">
    <label for="txtName">Name</label>
    <input type="text" name="name" id="txtName" autofocus required autocomplete="name">
    
    <label for="txtEmail">Email Address</label>
    <input type="email" name="email" id="txtEmail" required autocomplete="email">

    <label for="txtzipCode">Zip Code</label>
    <input type="text" name="zipCode" pattern="[0-9]{5}" id="txtName" required autocomplete="postal-code">

    <button type="submit">Create</button>

    </form>
</div>