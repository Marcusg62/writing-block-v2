<div class="form-data">
    <form action="/courses/create" method="POST">
    <label for="txtTitle">Title</label>
    <input type="text" name="title" id="txtTitle" autofocus required/>
    
    <label for="txtDescription">Description</label>
    <textarea type="email" name="description" id="txtDescription" required></textarea>

    <label for="txtMaxStudents">Max # Of Students</label>
    <input type="number" name="maxStudents" pattern="[0-9]" id="txtMaxStudents" required/>

    <label for="txtCost">Cost</label>
    <input type="number" name="cost" id="txtCost" required/>

    <button type="submit">Create</button>

    </form>
</div>