<div class="form-data">
    <form action="/courses/<%=course._id%>/update?_method=PUT" method="POST">
        <pre>
            <!-- <%= JSON.stringify(course) %>  -->
        </pre>
        <label for="txtTitle">Title</label>
        <input type="text" name="title" id="txtTitle" autofocus required value="<%=course.title%>">

        <label for="txtDescription">Description</label>
        <textarea type="email" name="description" id="txtDescription" required><%= course.description%></textarea>
        <label for="txtMaxStudents">Max # Of Students</label>
        <input type="number" name="maxStudents" pattern="[0-9]" id="txtMaxStudents" required value="<%=course.maxStudents%>">

        <label for="txtCost">Cost</label>
        <input type="number" name="cost" id="txtCost" required value="<%=course.cost %> "> 

        <button type="submit">Save</button>

    </form>
</div>